@model EasyRent.Models.Testimonials

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminMenu.cshtml";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Add New Testimony</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UploadedFile" class="control-label"></label>
                <input asp-for="UploadedFile" type="file" class="form-control-file" />
                <span asp-validation-for="UploadedFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Testimony" class="control-label"></label>
                <textarea asp-for="Testimony" id="summernote" rows="10">
                                    Place <em>some</em> <u>text</u> <strong>here</strong>
                                  </textarea>
                <span asp-validation-for="Testimony" class="text-danger"></span>
            </div>

            @if (User.IsInRole("Admin"))
            {
                <div class="form-group">
                    <label asp-for="UserId" class="control-label"></label>
                    <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="isApproved" /> @Html.DisplayNameFor(model => model.isApproved)
                    </label>
                </div>

            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>
    </div>


    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</div>


