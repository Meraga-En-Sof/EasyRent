@model EasyRent.Models.Testimonials

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminMenu.cshtml";
}

<h2>Create</h2>

<h4>Testimonials</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Testimony" class="control-label"></label>
                <input asp-for="Testimony" class="form-control" />
                <span asp-validation-for="Testimony" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageName" class="control-label"></label>
                <input asp-for="ImageName" class="form-control" />
                <span asp-validation-for="ImageName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="isApproved" /> @Html.DisplayNameFor(model => model.isApproved)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
