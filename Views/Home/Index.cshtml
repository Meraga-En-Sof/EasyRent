<!--==============================================
    =            Section popular property            =
    ===============================================-->
<div class="wrap-popular-property pdt80 pdbt40">
    <div class="container">
        <div class="row wow">
            <div class="col-xs-12 col-sm-12 col-md-12 wow fadeInLeft delay-07s">
                <h3>
                    Popular Property
                </h3>
                <div class="slider-popular-property owl-carousel owl-theme">
                    @{
                        string isactivez = "active";

                    }
                    @foreach (var item in Model.PopularProperties)
                    {
                        <div class="item @isactivez">
                            <a href="@Url.Action("PropertyDetail","Home", new { Id = item.Id})" target="_blank">
                                <div class="card">
                                    <div class="card-image">
                                        @if (item.isDealClosed == true)
                                        {

                                            <span class="ribbon">
                                                SOLD OUT
                                            </span>
                                        }
                                        <img alt="" class="img-responsive property-image" src="~/Images/@item.ImageName">
                                        <span class="card-title">
                                            @{
                                                string ammount = "$" + item.Price + "  / monthly";
                                                if (item.PropertyModeId == 1)
                                                {
                                                    ammount = "$" + item.Price;


                                                }
                                            }

                                            @ammount

                                        </span>
                                        <span class="card-price">
                                            For @item.PropertyMode.Name
                                        </span>
                                    </div>
                                    <div class="card-content">
                                        <div class="listingInfo">
                                            <div class="vcard">
                                                <span class="label label-success">
                                                    @item.PropertyType.Name
                                                </span>
                                                <div class="title-properti">
                                                    <h4>
                                                        @Html.Raw(item.Description)
                                                    </h4>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-spec">
                                        <div class="area" data-placement="top" data-toggle="tooltip" title="surface area">
                                            <strong>
                                                <i class="fa fa-map-o">
                                                </i>
                                            </strong>
                                            <span class="text">
                                                @item.Area M
                                            </span>
                                            <sup>
                                                2
                                            </sup>
                                        </div>
                                        <div class="area" data-placement="top" data-toggle="tooltip" title="building area">
                                            <strong>
                                                <i class="fa fa-parking">
                                                </i>
                                            </strong>
                                            <span class="text">
                                                @item.Garage Garage(s)
                                            </span>

                                        </div>
                                        <div class="area" data-placement="top" data-toggle="tooltip" title="Bed Room">
                                            <strong>
                                                <i class="fa fa-bed">
                                                </i>
                                            </strong>
                                            <span class="text">
                                                @item.BedRooms Bedrooms
                                            </span>

                                        </div>
                                        <div class="area" data-placement="top" data-toggle="tooltip" title="Bath Room">
                                            <strong>
                                                <i class="fa fa-shower">
                                                </i>
                                            </strong>
                                            <span class="text">
                                                @item.bathrooms Bathrooms
                                            </span>
                                            <sup>

                                            </sup>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                                                    isactivez = "";
                                                }


                </div>
            </div>
        </div>
    </div>
</div>
<div class="clearfix">
</div>

<!--==============================================
    =            Section recent property            =
    ===============================================-->
<div class="bg-default wrap-recent-property pdt40 pdbt80 wow fadeInUp delay-08s">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <h3>Recent Property ( @Model.RecentProperties.Count() )</h3>
                <div class="recent-property owl-carousel owl-theme">
                    @{
                        string isactives = "active";

                    }
                    @foreach (var item in Model.RecentProperties)
                    {
                        <div class="item @isactives">
                            <a href=" @Url.Action("PropertyDetail", "Home", new { Id = item.Id })">
                                <div class="listing-item compact">
                                    <div class="listing-img-container">
                                        <div class="listing-badges">
                                            <span class="featured">
                                                Featured
                                            </span>
                                            <span>
                                                @item.PropertyMode.Name
                                            </span>
                                        </div>
                                        <div class="listing-img-content">
                                            <span class="listing-compact-title">
                                                @item.Name
                                                <i>

                                                    @{
                                                        string ammount = "$" + item.Price + "  / monthly";
                                                        if (item.PropertyModeId == 1)
                                                        {
                                                            ammount = "$" + item.Price;


                                                        }
                                                    }

                                                    @ammount

                                                </i>
                                            </span>
                                            <ul class="listing-hidden-content">
                                                <li>
                                                    Area
                                                    <span>
                                                        @item.Area sq ft
                                                    </span>
                                                </li>
                                                <li>
                                                    Garage
                                                    <span>
                                                        @item.Garage
                                                    </span>
                                                </li>
                                                <li>
                                                    Beds
                                                    <span>
                                                        @item.BedRooms
                                                    </span>
                                                </li>
                                                <li>
                                                    Baths
                                                    <span>
                                                        @item.bathrooms
                                                    </span>
                                                </li>
                                            </ul>
                                        </div>
                                        <img alt="" src="~/Images/@item.ImageName">
                                    </div>
                                </div>
                            </a>
                        </div>
                                                            isactives = "";
                                                        }
                </div>
            </div>
        </div>
    </div>
</div>
<div class="clearfix">
</div>

<!--===================================
    =            Section counter            =
    ====================================-->
<div class="wrap-count wow fadeInUp delay-08s">
    <div class="container">
        <div class="row count">
            <h3>
                OUR
                <span>
                    ACHIEVEMENTS
                </span>
            </h3>
            @{
                var sell = Model.AllProperties.Where(m => m.PropertyModeId == 1);
                int forsell = sell.Count();
                var rent = Model.AllProperties.Where(m => m.PropertyModeId == 2);
                int forrent = rent.Count();
            }
            <div class="col-md-4 col-sm-4">
                <div class="counter-item">
                    <div class="count-value" data-count="@forsell">
                        <span class="fa fa-home">
                        </span>
                        <span class="start-count">
                          10
                        </span>
                    </div>
                    <p>
                        Listing For Sale
                    </p>
                </div>
            </div>
            <div class="col-md-4 col-sm-4">
                <div class="counter-item">
                    <div class="count-value" data-count="@forrent">
                        <span class="fa fa-tags">
                        </span>
                        <span class="start-count">
                            10
                        </span>
                    </div>
                    <p>
                        Listing For Rent
                    </p>
                </div>
            </div>
            <div class="col-md-4 col-sm-4">
                <div class="counter-item">
                    <div class="count-value" data-count="@Model.AllProperties.Select(m => m.UserId).Distinct().Count()">
                        <span class="fa fa-users">
                        </span>
                        <span class="start-count">
                            10
                        </span>
                    </div>
                    <p>
                       Active  Agents &amp; Landlords
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="clearfix">
</div>

