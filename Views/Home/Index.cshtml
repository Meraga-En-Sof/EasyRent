@model EasyRent.ViewModels.UserHomeViewModel
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/HomeGeneral/Index.cshtml";
}


<!--==========Start Slides Area==========-->
<section id="home_slides" class="home_slides">
    <div class="carousel slide" data-ride="carousel" id="home-slider">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li class="active" data-slide-to="0" data-target="#home-slider">
            </li>
            <li data-slide-to="1" data-target="#home-slider">
            </li>
            <li data-slide-to="2" data-target="#home-slider">
            </li>
        </ol>
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            @{
                int i = 0;
                string isactive = "active";

            } 
            @foreach (var item in Model.SliderProperties)
            {
            <div class="item @isactive">
                @if (!string.IsNullOrEmpty(item.ImageName))
                {
                    <img alt="@item.Name" src="~/Images/@item.ImageName">
                }
                else
                {
                    <img alt="@item.Name" src="~/Images/generic-property.jpg">
                }

                <div class="carousel-caption">
                    <h1 class="animated bounceInLeft">
                        @item.Name
                    </h1>
                    <p class="animated bounceInRight">
                        @item.Address
                        <br />
                        <!-- <a class="active animated fadeInUp" href="#">Contact Agent</a> -->
                        <a class="btn button-md button-theme animated fadeInUp" href="@Url.Action("PropertyDetail","Home", new { Id = item.Id})">
                            Learn More
                        </a>
                </div>
            </div>
                isactive = " ";
            }

        </div>
    </div>
</section>
<!--==========End Slides Area==========-->
