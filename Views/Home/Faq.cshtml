@model EasyRent.ViewModels.UserFaqViewModel
@{
    ViewData["Title"] = "Faq";
    Layout = "~/Views/HomeGeneral/Index.cshtml";
}

<div class="sub-banner">
    <div class="overlay">
        <div class="container">
            <div class="breadcrumb-area">
                <div class="top">
                    <h4>FREQUENTLY ASKED QUESTIONS</h4>
                </div>
                <ul class="breadcrumbs">
                    <li><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li class="active">Faq</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!--====  End of Section breadcrumb  ====-->

<div class="pdt80 pdbt80">
    <div class="container">
        <div class="page-title">
            <h3 class="mb30">
                FAQ (ASKED QUESTIONS AND ANSWERS)
            </h3>
        </div>
        <div class="row wow">
            <div class="col-xs-12 col-sm-12 col-md-8 wow fadeInUp delay-07s">
                <!-- Start Accordion -->
                <div class="panel-group" id="accordion">

                    @foreach (var item in Model.Faqs)
                    {
                        <div class="panel panel-default">
                            <div class="panel-heading" id="heading-@item.Id">
                                <h6 class="panel-title">
                                    <a class="collapsed" data-parent="#accordion" data-toggle="collapse" href="#panel-@item.Id">
                                        @item.Name
                                    </a>
                                </h6>
                            </div>
                            <div class="panel-collapse collapse" id="panel-@item.Id">
                                <div class="panel-body">
                                    <p>
                                        @item.Content
                                    </p>
                                </div>
                            </div>
                        </div>
                    }

                </div>
                <!-- End Accordion -->
            </div>
            <!--=====================================
            =            Section sidebar            =
            ======================================-->
           
        </div>
    </div>
</div>


