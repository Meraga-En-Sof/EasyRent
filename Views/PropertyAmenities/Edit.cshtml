@model EasyRent.Models.PropertyAmenities

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/AdminMenu.cshtml";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Edit Property Amenity</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PropertyId" class="control-label"></label>
                <select asp-for="PropertyId" class="form-control" asp-items="ViewBag.PropertyId"></select>
                <span asp-validation-for="PropertyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmenitiesId" class="control-label"></label>
                <select asp-for="AmenitiesId" class="form-control" asp-items="ViewBag.AmenitiesId"></select>
                <span asp-validation-for="AmenitiesId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</div>